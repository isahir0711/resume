---
import Badge from "./Badge.astro";

const projects = [
  {
    title: "vaulted",
    description: "Secure password manager with AES encryption.",
    technologies: ["Flutter", "SQLite"],
    github: "https://github.com/isahir0711/vaulted",
  },
];

// Tech icon mapping
const techIcons: Record<string, string> = {
  Flutter: "/src/public/flutter.svg",
  SQLite: "/src/public/sqlite.svg",
  Angular: "/src/public/angular.svg",
  Astro: "/src/public/astro.svg",
  Azure: "/src/public/azure.svg",
  "C#": "/src/public/csharp.svg",
  "SQL Server": "/src/public/sql-server.svg",
  Stripe: "/src/public/stripe.svg",
};
---

<section id="proyects" class="dark:text-white">
  <h2 class="text-3xl font-semibold">Proyectos personales</h2>

  <div class="mt-6 grid grid-cols-1 gap-3 lg:grid-cols-2">
    {
      projects.map((project) => (
        <article class="flex flex-col justify-between bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-700 hover:bg-slate-100 duration-300">
          <div>
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                {project.title}
              </h3>
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>

            <p class="text-gray-600 dark:text-gray-400 mb-3 text-sm leading-relaxed">
              {project.description}
            </p>
          </div>

          <div class="flex flex-wrap gap-2">
            {project.technologies.map((tech) => (
              <Badge text={tech} icon={techIcons[tech]} />
            ))}
          </div>
        </article>
      ))
    }
  </div>
</section>
